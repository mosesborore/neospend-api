# Application environment: development, testing, or production
ENVIRONMENT=development

# Enable debug mode (True/False)
DEBUG=True

# Database URL
# For SQLite (default): sqlite:///database.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql+pymysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///database.db

# Secret key for JWT encoding/decoding (change in production!)
SECRET_KEY=your-secret-key-change-in-production

# JWT algorithm
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# SQLAlchemy echo (log SQL statements)
SQLALCHEMY_ECHO=True
